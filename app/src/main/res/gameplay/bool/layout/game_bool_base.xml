<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    android:orientation="vertical"
    android:gravity="bottom"
    >

    <View
        android:id="@+id/extra_view01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scale01"
        sl:scale_base_height="200"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_bool"
            app:scale_height="70"
            app:scale_left="220"
            app:scale_top="@integer/game_title_top"
            app:scale_width="665" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game_interface_score"
            app:scale_height="50"
            app:scale_left="80"
            app:scale_top="150"
            app:scale_width="240" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game_interface_time"
            app:scale_height="50"
            app:scale_left="820"
            app:scale_top="150"
            app:scale_width="160" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scale02"
        sl:scale_base_height="950"
        sl:scale_base_width="1080">

        <TextView
            android:id="@+id/game_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textAlignment="center"
            app:scale_height="70"
            app:scale_left="80"
            app:scale_top="5"
            app:scale_width="240"
            sl:scale_textsize="50"
            />

        <TextView
            android:id="@+id/game_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textAlignment="center"
            app:scale_height="70"
            app:scale_left="785"
            app:scale_top="5"
            app:scale_width="240"
            sl:scale_textsize="50"
            />

        <ImageView
            android:id="@+id/bool_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bool_title_ch1_q1"
            app:scale_height="70"
            app:scale_left="0"
            app:scale_top="80"
            app:scale_width="1080"/>

        <ImageView
            android:id="@+id/bool_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_bool_01"
            app:scale_height="70"
            app:scale_left="0"
            app:scale_top="200"
            app:scale_width="1080"/>

        <ImageView
            android:id="@+id/bool_sentence_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bool_object_ch1_q6_02"
            app:scale_height="500"
            app:scale_left="@integer/game_blank_sentence_left"
            app:scale_top="275"
            app:scale_width="@integer/game_blank_sentence_base_width" />

        <ImageView
            android:id="@+id/button_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_bool_true"
            app:scale_height="130"
            app:scale_left="250"
            app:scale_top="820"
            app:scale_width="600"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <View
        android:id="@+id/extra_view02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scale03"
        sl:scale_base_height="@integer/game_scale_height_04"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/button_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_bool_false"
            app:scale_height="130"
            app:scale_left="250"
            app:scale_top="0"
            app:scale_width="600"/>

        <ImageView
            android:id="@+id/button_game_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game_interface_exit"
            android:layout_gravity="bottom"
            app:scale_height="@integer/game_button_exit_height"
            app:scale_left="@integer/game_button_exit_left"
            app:scale_top="@integer/game_button_exit_top"
            app:scale_width="@integer/game_button_exit_width"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <View
        android:id="@+id/extra_view03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </View>

</LinearLayout>