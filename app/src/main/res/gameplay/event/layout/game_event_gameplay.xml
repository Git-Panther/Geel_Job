            android:id="@+id/game_check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_game_event_check"
            app:scale_height="200"
            app:scale_left="810"
            app:scale_top="0"
            app:scale_width="200" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/scale3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_height="100"
        sl:scale_base_width="1080">

        <TextView
            android:id="@+id/current_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@android:color/white"
            android:textAlignment="textEnd"
            app:scale_height="100"
            app:scale_left="@integer/tutorial_current_page"
            app:scale_top="0"
            app:scale_width="200"
            sl:scale_textsize="@integer/text_size_non_korean" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="/"
            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/tutorial_iterator"
            app:scale_top="0"
            app:scale_width="200"
            sl:scale_textsize="@integer/text_size_non_korean" />

        <TextView
            android:id="@+id/max_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="10"
            android:textAlignment="textEnd"
            app:scale_height="100"
            app:scale_left="@integer/tutorial_max_page"
            app:scale_top="0"
            app:scale_width="200"
            sl:scale_textsize="@integer/text_size_non_korean" />
    </com.ssomai.android.scalablelayout.ScalableLayout>


    <com.ssomai.android.scalablelayout.ScalableLayout
