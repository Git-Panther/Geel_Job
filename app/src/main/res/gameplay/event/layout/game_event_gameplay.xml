            android:id="@+id/bgSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/tutorial_move_bar"
            android:progressDrawable="@drawable/progress_tutorial"
            android:visibility="invisible"
            app:scale_height="100"
            app:scale_left="200"
            app:scale_top="0"
            app:scale_width="700" />

