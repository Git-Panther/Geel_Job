            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/ranking_score_left"
            app:scale_top="750"
            app:scale_width="200"
            sl:scale_textsize="70" />

        <TextView
            android:id="@+id/rank_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5."
            app:scale_height="100"
            app:scale_left="@integer/ranking_number_left"
            app:scale_top="850"
            app:scale_width="100"
            sl:scale_textsize="70" />

        <TextView
            android:id="@+id/grade5_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5g_name"
            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/ranking_name_left"
            app:scale_top="850"
            app:scale_width="@integer/ranking_name_width"
            sl:scale_textsize="70"
            />

        <TextView
            android:id="@+id/grade5_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/ranking_score_left"
            app:scale_top="850"
            app:scale_width="200"
            sl:scale_textsize="70" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <View
        android:id="@+id/extra_view02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scale04"
        sl:scale_base_height="@integer/game_scale_height_04"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/button_game_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game_interface_exit"
            android:layout_gravity="bottom"
            app:scale_height="@integer/game_button_exit_height"
            app:scale_left="@integer/game_button_exit_left"
            app:scale_top="@integer/game_button_exit_top"
            app:scale_width="@integer/game_button_exit_width"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <View
        android:id="@+id/extra_view03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </View>

</LinearLayout>
