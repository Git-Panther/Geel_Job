<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    android:orientation="vertical"
    android:gravity="bottom"
    >

    <View
        android:id="@+id/extra_view01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scale01"
        sl:scale_base_height="@integer/game_scale_height_01"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/stage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ranking_stage"
            app:scale_height="100"
            app:scale_left="0"
            app:scale_top="100"
            app:scale_width="1080"/>

        <TextView
            android:id="@+id/stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stage"
            app:scale_height="100"
            app:scale_left="575"
            app:scale_top="115"
            app:scale_width="200"
            sl:scale_textsize="60" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scale02"
        sl:scale_base_height="950"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ranking_time"
            app:scale_height="100"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="1080"/>

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            app:scale_height="100"
            app:scale_left="425"
            app:scale_top="15"
            app:scale_width="200"
            sl:scale_textsize="60" />

        <ImageView
            android:id="@+id/score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ranking_score"
            app:scale_height="100"
            app:scale_left="0"
            app:scale_top="100"
            app:scale_width="1080"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="score"
            app:scale_height="100"
            app:scale_left="375"
            app:scale_top="115"
            app:scale_width="300"
            sl:scale_textsize="60" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ranking"
            android:textAlignment="center"
            app:scale_height="150"
            app:scale_left="0"
            app:scale_top="250"
            app:scale_width="1080"
            sl:scale_textsize="80" />

        <TextView
            android:id="@+id/rank_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            app:scale_height="100"
            app:scale_left="@integer/ranking_number_left"
            app:scale_top="450"
            app:scale_width="100"
            sl:scale_textsize="70" />

        <TextView
            android:id="@+id/grade1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한국어다이브라도"
            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/ranking_name_left"
            app:scale_top="450"
            app:scale_width="@integer/ranking_name_width"
            sl:scale_textsize="70"
            />

        <TextView
            android:id="@+id/grade1_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999"
            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/ranking_score_left"
            app:scale_top="450"
            app:scale_width="200"
            sl:scale_textsize="70" />

        <TextView
            android:id="@+id/rank_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2."
            app:scale_height="100"
            app:scale_left="@integer/ranking_number_left"
            app:scale_top="550"
            app:scale_width="100"
            sl:scale_textsize="70" />

        <TextView
            android:id="@+id/grade2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00000000"
            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/ranking_name_left"
            app:scale_top="550"
            app:scale_width="@integer/ranking_name_width"
            sl:scale_textsize="70"
            />

        <TextView
            android:id="@+id/grade2_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/ranking_score_left"
            app:scale_top="550"
            app:scale_width="200"
            sl:scale_textsize="70"/>

        <TextView
            android:id="@+id/rank_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3."
            app:scale_height="100"
            app:scale_left="@integer/ranking_number_left"
            app:scale_top="650"
            app:scale_width="100"
            sl:scale_textsize="70" />

        <TextView
            android:id="@+id/grade3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인피니티워"
            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/ranking_name_left"
            app:scale_top="650"
            app:scale_width="@integer/ranking_name_width"
            sl:scale_textsize="70" />

        <TextView
            android:id="@+id/grade3_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/ranking_score_left"
            app:scale_top="650"
            app:scale_width="200"
            sl:scale_textsize="70" />

        <TextView
            android:id="@+id/rank_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4."
            app:scale_height="100"
            app:scale_left="@integer/ranking_number_left"
            app:scale_top="750"
            app:scale_width="100"
            sl:scale_textsize="70" />

        <TextView
            android:id="@+id/grade4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4g_name"
            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/ranking_name_left"
            app:scale_top="0750"
            app:scale_width="@integer/ranking_name_width"
            sl:scale_textsize="70" />

        <TextView
            android:id="@+id/grade4_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
