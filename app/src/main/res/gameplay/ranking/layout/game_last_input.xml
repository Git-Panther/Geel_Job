<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    android:orientation="vertical"
    android:gravity="bottom"
    >

    <View
        android:id="@+id/extra_view01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scale01"
        sl:scale_base_height="@integer/game_scale_height_01"
        sl:scale_base_width="1080">

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scale02"
        sl:scale_base_height="950"
        sl:scale_base_width="1080">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLength="8"
            android:maxLines="1"
            android:inputType="textShortMessage"
            android:hint="이름을 입력하세요."
            android:id="@+id/edit_text"
            android:layout_gravity="center"
            android:privateImeOptions="defaultInputmode=korean"
            app:scale_height="200"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="610"
            app:scale_textsize="68"
            app:font="KOREAN"
            />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/button_ranking_submit"
            android:src="@drawable/button_ranking_submit"
            android:layout_gravity="center"
            app:scale_height="125"
            app:scale_left="0"
            app:scale_top="200"
            app:scale_width="250"
            />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <View
        android:id="@+id/extra_view02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scale04"
        sl:scale_base_height="@integer/game_scale_height_04"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/button_game_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game_interface_exit"
            android:layout_gravity="bottom"
            app:scale_height="@integer/game_button_exit_height"
            app:scale_left="@integer/game_button_exit_left"
            app:scale_top="@integer/game_button_exit_top"
            app:scale_width="@integer/game_button_exit_width"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <View
        android:id="@+id/extra_view03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </View>

</LinearLayout>