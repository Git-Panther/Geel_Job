<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_option"
    android:orientation="vertical"
    android:gravity="bottom">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_height="460"
        sl:scale_base_width="1080">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/option_image_background"
            app:scale_height="160"
            app:scale_left="140"
            app:scale_top="300"
            app:scale_width="80" />

        <SeekBar
            android:id="@+id/bgSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/progress_option"
            android:thumb="@drawable/seek_button_option"
            android:max="100"
            app:scale_height="160"
            app:scale_left="300"
            app:scale_top="300"
            app:scale_width="700" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_height="100"
        sl:scale_base_width="1080">

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_height="160"
        sl:scale_base_width="1080">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/option_image_effect"
            app:scale_height="160"
            app:scale_left="140"
            app:scale_top="0"
            app:scale_width="80" />

        <SeekBar
            android:id="@+id/effSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/progress_option"
            android:thumb="@drawable/seek_button_option"
            android:max="100"
            app:scale_height="160"
            app:scale_left="300"
            app:scale_top="0"
            app:scale_width="700" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_height="100"
        sl:scale_base_width="1080">

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_height="200"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/tutorial_replay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_tutorial_replay"
            app:scale_height="200"
            app:scale_left="190"
            app:scale_top="0"
            app:scale_width="300" />

        <ImageView
            android:id="@+id/game_replay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_game_replay"
            app:scale_height="200"
            app:scale_left="590"
            app:scale_top="0"
            app:scale_width="300" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_height="250"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/button_game_exit"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:src="@drawable/button_option_back"
            app:scale_height="120"
            app:scale_left="50"
            app:scale_top="80"
            app:scale_width="120" />
    </com.ssomai.android.scalablelayout.ScalableLayout>


</LinearLayout>
