<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tutorial_content_layout"
    android:background="@drawable/ch1_sub1_page01"
    android:orientation="vertical"
    android:gravity="bottom">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_height="100"
        sl:scale_base_width="1080">

        <TextView
            android:id="@+id/current_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@android:color/white"
            android:textAlignment="textEnd"
            app:scale_height="100"
            app:scale_left="@integer/tutorial_current_page"
            app:scale_top="0"
            app:scale_width="200"
            sl:scale_textsize="@integer/text_size_non_korean" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="/"
            android:textAlignment="center"
            app:scale_height="100"
            app:scale_left="@integer/tutorial_iterator"
            app:scale_top="0"
            app:scale_width="200"
            sl:scale_textsize="@integer/text_size_non_korean" />

        <TextView
            android:id="@+id/max_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="10"
            android:textAlignment="textEnd"
            app:scale_height="100"
            app:scale_left="@integer/tutorial_max_page"
            app:scale_top="0"
            app:scale_width="200"
            sl:scale_textsize="@integer/text_size_non_korean" />

    </com.ssomai.android.scalablelayout.ScalableLayout>


    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_height="100"
        sl:scale_base_width="1080">

        <SeekBar
            android:id="@+id/bgSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/tutorial_move_bar"
            android:progressDrawable="@drawable/progress_tutorial"
            app:scale_height="100"
            app:scale_left="200"
            app:scale_top="0"
            app:scale_width="700" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_height="130"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/button_game_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_back_content"
            app:scale_height="100"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="250" />

        <ImageView
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_prev_tutorial"
            app:scale_height="130"
            app:scale_left="330"
            app:scale_top="0"
            app:scale_width="200" />

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_next_tutorial"
            app:scale_height="130"
            app:scale_left="600"
            app:scale_top="0"
            app:scale_width="200" />

    </com.ssomai.android.scalablelayout.ScalableLayout>
</LinearLayout>
