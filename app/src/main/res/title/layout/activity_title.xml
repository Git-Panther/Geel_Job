<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_title"
    android:orientation="vertical"
    android:gravity="bottom"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="400"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/t_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_button1"
            app:scale_height="200"
            app:scale_left="300"
            app:scale_top="200"
            app:scale_width="500" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="50"
        sl:scale_base_width="1080">

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="200"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/t_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_button2"
            app:scale_height="200"
            app:scale_left="300"
            app:scale_top="0"
            app:scale_width="500" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="50"
        sl:scale_base_width="1080">

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="200"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/t_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_button3"
            app:scale_height="200"
            app:scale_left="300"
            app:scale_top="0"
            app:scale_width="500" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="50"
        sl:scale_base_width="1080">

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="200"
        sl:scale_base_width="1080">

        <ImageView
            android:id="@+id/t_button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_button4"
            app:scale_height="200"
            app:scale_left="300"
            app:scale_top="0"
            app:scale_width="500" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>